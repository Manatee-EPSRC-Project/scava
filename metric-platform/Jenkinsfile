pipeline {
  agent any
  stages {
    stage('Build Metric Platform') {
      steps {
        dir(path: 'metric-platform/') {
          sh 'mvn validate'
          sh 'mvn compile'
          sh 'mvn package'
        }
      }
    }
    stage('Test Metric Platform') {
      steps {
        dir(path: 'metric-platform/') {
          sh 'mvn test'
        }
      }
    }
  }
}
