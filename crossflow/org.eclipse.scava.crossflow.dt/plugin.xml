<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

	<extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            nameFilter="*.crossflow_diagram"
            id="CROSSFLOWBaseClassGeneration.contribution">
         <menu
               icon="icons/running.gif"
               id="CROSSFLOWGeneration.menu"
               label="CROSSFLOW Artefact Generation"
               path="additions">
            <separator
                  name="group">
            </separator>
         </menu>
         
         <action
               class="org.eclipse.scava.crossflow.dt.CreateExecutablesAction"
               enablesFor="1"
               icon="icons/busy.gif"
               id="CROSSFLOWExecutableGenerationAction"
               label="Generate CROSSFLOW Executables"
               menubarPath="CROSSFLOWGeneration.menu/group">
         </action>

         <action
               class="org.eclipse.scava.crossflow.dt.GenerateAction"
               enablesFor="1"
               icon="icons/busy.gif"
               id="CROSSFLOWBaseClassGenerationAction"
               label="Generate CROSSFLOW Base Classes"
               menubarPath="CROSSFLOWGeneration.menu/group">
         </action>

      </objectContribution>
   </extension>

</plugin>
