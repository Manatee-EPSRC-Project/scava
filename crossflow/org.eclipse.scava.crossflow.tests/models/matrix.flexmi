<?nsuri org.eclipse.scava.crossflow?>
<?render-graphviz-dot graphviz.egl?>
<_>

	<!-- Example where participants can choose which word to count instances of -->
	<workflow name="MatrixWorkflow" package="org.eclipse.scava.crossflow.tests.matrix">
		<source name="MatrixConfigurationSource" out="MatrixConfigurations"/>
		<queue name="MatrixConfigurations" type="MatrixConfiguration"/>
		<task name="MatrixConstructor" in="MatrixConfigurations" out="Matrices"/>
		<queue name="Matrices" type="Matrix"/>
		<sink name="MatrixSink" in="Matrices"/>
		
		<type name="MatrixConfiguration">
			<field name="rows" type="int"/>
			<field name="columns" type="int"/>
			<field name="initialValue" type="int"/>
		</type>
		
		<type name="Matrix">
			<field name="rows" type="Row" many="true"/>
		</type>
		
		<type name="Row">
			<field name="cells" type="Integer" many="true"/>
		</type>
		
	</workflow>
	
</_>